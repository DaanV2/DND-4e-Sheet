<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DaanV2.DND.Pages"
      xmlns:usercontrols="clr-namespace:DaanV2.DND.UserControls"
      xmlns:DND="clr-namespace:DaanV2.DND;assembly=Data" x:Name="page" x:Class="DaanV2.DND.Pages.CharacterPage"
      mc:Ignorable="d" Title="CharacterPage" d:DesignHeight="536.25" d:DesignWidth="762.5">
    <Page.DataContext>
        <DND:CharacterSheet/>
    </Page.DataContext>

    <StackPanel>
        <usercontrols:AbilityScoresFancyControl DataContext="{Binding DataContext.AbilityScores}" 
            Height="120"/>
        <TabControl x:Name="CharacterThings" Grid.Row="1" DataContext="{Binding DataContext.Powers}">
            <TabItem Header="_Powers" x:Name="CharacterPowers" DataContext="{Binding DataContext}">
                <usercontrols:PowerCollectionControl DataContext="{Binding DataContext, ElementName=CharacterPowers}"/>
            </TabItem>
        </TabControl>
    </StackPanel>
</Page>
