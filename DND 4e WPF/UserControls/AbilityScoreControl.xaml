<UserControl x:Name="userControl" x:Class="DaanV2.DND.UserControls.AbilityScoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaanV2.DND.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding DataContext.Score, ElementName=userControl, FallbackValue=10, Mode=TwoWay}" 
                 MaxLines="1"/>
        <TextBlock Text="{Binding Title, ElementName=userControl, FallbackValue=Score}"/>
        <TextBox Text="{Binding DataContext.Modifier, ElementName=userControl, FallbackValue=0}" 
                 MaxLines="1"/>
    </StackPanel>
</UserControl>
