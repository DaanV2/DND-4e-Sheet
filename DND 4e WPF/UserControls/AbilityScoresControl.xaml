<UserControl x:Class="DaanV2.DND.UserControls.AbilityScoresControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaanV2.DND.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <ItemsControl>
            <local:AbilityScoreControl Title="Strength" DataContext="{Binding DataContext.Strength, ElementName=usercontrol}" />
            <local:AbilityScoreControl Title="Constitution" DataContext="{Binding DataContext.Constitution, ElementName=usercontrol}" />
            <local:AbilityScoreControl Title="Dexterity" DataContext="{Binding DataContext.Dexterity, ElementName=usercontrol}" />
            <local:AbilityScoreControl Title="Intelligence" DataContext="{Binding DataContext.Intelligence, ElementName=usercontrol}" />
            <local:AbilityScoreControl Title="Wisdom" DataContext="{Binding DataContext.Wisdom, ElementName=usercontrol}" />
            <local:AbilityScoreControl Title="Charisma" DataContext="{Binding DataContext.Charisma, ElementName=usercontrol}" />
        </ItemsControl>
    </ScrollViewer>
</UserControl>
