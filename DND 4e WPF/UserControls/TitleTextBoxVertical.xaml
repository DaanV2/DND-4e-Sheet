<UserControl x:Name="userControl" x:Class="DaanV2.DND.UserControls.TitleTextBoxVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaanV2.DND.UserControls"
             mc:Ignorable="d" d:DesignHeight="100" d:DesignWidth="200"
             BorderBrush="{Binding TitleBackground, ElementName=userControl}"
             BorderThickness="1">
    <StackPanel>
        <Label Content="{Binding TextValue, ElementName=userControl}" />
        <Label Content="{Binding TitleText, ElementName=userControl}" 
               Background="{Binding TitleBackground, ElementName=userControl}"  />
    </StackPanel>
</UserControl>
