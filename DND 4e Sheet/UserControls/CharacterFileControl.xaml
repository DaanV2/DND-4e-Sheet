<UserControl x:Name="userControl" x:Class="DaanV2.DND.UserControls.CharacterFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DaanV2.DND.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="56" d:DesignWidth="56">
    <Border BorderThickness="1" CornerRadius="5" BorderBrush="Black">
        <Label Content="{Binding DataContext.Name, ElementName=userControl, FallbackValue=...}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Border>
</UserControl>
